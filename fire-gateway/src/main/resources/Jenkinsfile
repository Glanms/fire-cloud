pipeline {
    agent any

    triggers {
        pollSCM('H/1 0 * * *')
    }

    stages {
        stage("pull") {
            steps {
                echo 'current'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('deploy') {
            steps {
                sh 'mvn deploy -Dskip.test=true'
            }
        }

    }
}